<div class="card">
  <div class="card-header">
    <h1>Sign Up</h1>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Password" %>
        <% if @minimum_password_length %>
          <div class="container">
            <em class="form-text text-muted"><%= @minimum_password_length %> characters minimum</em>
          </div>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm Password" %>
      </div>

      <div class="actions pt-2">
        <div class="pb-2">
          <div class="row justify-content-md-center align-items-center">
            <div class="col col-4">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
