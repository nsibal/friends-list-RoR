<h1>All Friends</h1>

<br/>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% next unless friend.user == current_user %>

        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Show', friend, class: "badge badge-primary" %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class: "badge badge-light" %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, class: "badge badge-danger", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Add Friend', new_friend_path, class: "btn btn-primary" %>
