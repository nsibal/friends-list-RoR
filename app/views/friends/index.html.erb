<h1>My Friends</h1>

<br/>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% next unless friend.user == current_user %>

        <tr>
          <td>
            <%= friend.first_name %>
            <%= friend.last_name %>
          </td>

          <td><%= friend.email %></td>

          <td><%= friend.phone %></td>

          <td><%= friend.twitter %></td>

          <td>
            <%= link_to friend do %>
              <i class="fas fa-address-card text-primary"></i>
            <% end %>
          </td>

          <td>
            <%= link_to edit_friend_path(friend) do %>
              <i class="fas fa-edit text-warning"></i>
            <% end %>
          </td>

          <td>
            <%= link_to friend, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fas fa-trash text-danger"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Add Friend', new_friend_path, class: "btn btn-primary" %>
