  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class: "form-control form-control-lg", placeholder: "First name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name, class: "form-control form-control-lg", placeholder: "Last name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class: "form-control form-control-lg", placeholder: "Phone number" %>
  </div>

  <div class="field form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">@</div>
      </div>
      <%= form.text_field :twitter, class: "form-control form-control-lg", placeholder: "Twitter" %>
    </div>
  </div>

  <div class="actions pt-2">
    <div class="pb-2">
      <div class="row justify-content-md-center align-items-center">
        <div class="col col-4">
          <%= form.submit class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
